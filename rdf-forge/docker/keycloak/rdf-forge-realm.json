{
  "realm": "rdf-forge",
  "enabled": true,
  "sslRequired": "external",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "roles": {
    "realm": [
      {
        "name": "admin",
        "description": "Full administrative access"
      },
      {
        "name": "editor",
        "description": "Can create and modify pipelines, shapes, and data"
      },
      {
        "name": "viewer",
        "description": "Read-only access to all resources"
      }
    ],
    "client": {
      "rdf-forge-ui": [
        {
          "name": "admin",
          "description": "Admin role for RDF Forge UI"
        },
        {
          "name": "editor",
          "description": "Editor role for RDF Forge UI"
        },
        {
          "name": "viewer",
          "description": "Viewer role for RDF Forge UI"
        }
      ]
    }
  },
  "users": [
    {
      "username": "admin",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Admin",
      "lastName": "User",
      "email": "admin@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "admin",
          "temporary": false
        }
      ],
      "realmRoles": ["admin"],
      "clientRoles": {
        "rdf-forge-ui": ["admin"]
      }
    },
    {
      "username": "demo",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Demo",
      "lastName": "User",
      "email": "demo@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "demo",
          "temporary": false
        }
      ],
      "realmRoles": ["editor"],
      "clientRoles": {
        "rdf-forge-ui": ["editor"]
      }
    },
    {
      "username": "viewer",
      "enabled": true,
      "emailVerified": true,
      "firstName": "View",
      "lastName": "User",
      "email": "viewer@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "viewer",
          "temporary": false
        }
      ],
      "realmRoles": ["viewer"],
      "clientRoles": {
        "rdf-forge-ui": ["viewer"]
      }
    }
  ],
  "clients": [
    {
      "clientId": "rdf-forge-ui",
      "name": "RDF Forge UI",
      "description": "RDF Forge Angular Frontend Application",
      "rootUrl": "http://localhost:3000",
        "http://localhost:4200",
      "baseUrl": "/",
      "surrogateAuthRequired": false,
      "enabled": true,
      "alwaysDisplayInConsole": false,
      "clientAuthenticatorType": "client-secret",
      "redirectUris": [
        "http://localhost:3000/*",
        "http://localhost:4200/*",
        "http://localhost:9080/*"
      ],
      "webOrigins": [
        "http://localhost:3000",
        "http://localhost:4200",
        "http://localhost:9080"
      ],
      "notBefore": 0,
      "bearerOnly": false,
      "consentRequired": false,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "publicClient": true,
      "frontchannelLogout": true,
      "protocol": "openid-connect",
      "attributes": {
        "oidc.ciba.grant.enabled": "false",
        "oauth2.device.authorization.grant.enabled": "false",
        "backchannel.logout.session.required": "true",
        "backchannel.logout.revoke.offline.tokens": "false"
      },
      "authenticationFlowBindingOverrides": {},
      "fullScopeAllowed": true,
      "nodeReRegistrationTimeout": -1,
      "protocolMappers": [
        {
          "name": "realm-roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "realm_access.roles",
            "jsonType.label": "String",
            "multivalued": "true"
          }
        },
        {
          "name": "client-roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-client-role-mapper",
          "consentRequired": false,
          "config": {
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "resource_access.${client_id}.roles",
            "jsonType.label": "String",
            "multivalued": "true",
            "usermodel.clientRoleMapping.clientId": "rdf-forge-ui"
          }
        }
      ],
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "roles",
        "profile",
        "email"
      ],
      "optionalClientScopes": [
        "address",
        "phone",
        "offline_access",
        "microprofile-jwt"
      ]
    },
    {
      "clientId": "rdf-forge-api",
      "name": "RDF Forge API",
      "description": "RDF Forge Backend Services",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "rdf-forge-api-secret",
      "bearerOnly": true,
      "publicClient": false,
      "protocol": "openid-connect"
    }
  ],
  "defaultDefaultClientScopes": [
    "role_list",
    "profile",
    "email",
    "roles",
    "web-origins",
    "acr"
  ],
  "defaultOptionalClientScopes": [
    "offline_access",
    "address",
    "phone",
    "microprofile-jwt"
  ]
}
